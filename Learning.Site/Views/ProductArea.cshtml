@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ProductArea>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "ChildPage.cshtml";
	var products = Model?.Children<ProductItem>()?.OrderByDescending(x => x.CreateDate);
}


<!-- Product section -->
<section class="section section--sand">

	<div class="container">
		<div class="row">
			<h2>Our products</h2>
			<div class="product-grid">
				
				@foreach (var product in (products ?? new List<ProductItem>().Order()))
                {
                	<a href="@product.Url()" class="article article-with-image">
                	   <div class="article-info">
                		  <h3 class="article-title">@product.Name</h3>
                	     </div>	
                	 </a>
                }
			</div>
		</div>
	</div>
</section>